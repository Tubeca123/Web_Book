@section AddToCart{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".add-to-cart").click(function (e) {
                e.preventDefault();

                // Lấy giá trị số lượng từ trường nhập liệu
                var quantity = $("#Quantity").val();

                // Nếu cần kiểm tra số lượng hợp lệ, bạn có thể thêm điều kiện ở đây.

                // Gửi dữ liệu qua Ajax
                $.ajax({
                    url: "/Cart/AddToCart",
                    data: {
                        id: $(this).data("id"),
                        quantity: quantity // Truyền giá trị số lượng
                    },
                    success: function (data) {
                        const Toast = Swal.mixin({
                            toast: true,
                            position: "top-end",
                            showConfirmButton: false,
                            timer: 1000,
                        });
                        Toast.fire({
                            icon: "success",
                            title: "Thêm giỏ hàng thành công"
                        });
                        $("#cartItemCount").text(data.cartItemCount);
                    },
                    error: function () {
                        toastr.error('Đã xảy ra lỗi!');
                    }
                });
            });
        });
    </script>
}
@section BookComment{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            $("#c_sendP").click(function (e) {
                e.preventDefault();
                var _message = $("#c_message2").val();
                var _id = @Model.BookID;
                $.ajax({
                    url: "/BookComment/Add",
                    type: "POST",
                    data: { message: _message, id: _id },
                    success: function (result) {
                        if (result) {
                            $("#c_message2").val("");
                            const Toast = Swal.mixin({
                                toast: true,
                                position: "top-end",
                                showConfirmButton: false,
                                timer: 1000,
                            });
                            Toast.fire({
                                icon: "success",
                                title: "Bình luận thành công"
                            });
                        }
                        else {
                            toastr.error('Đã xảy ra lỗi!');
                        }
                    }
                })
            });
        })
    </script>
}
